<odoo>
    <data>
        <record id="sale_report_inherited_search_view" model="ir.ui.view">
            <field name="name">sale.report.inherited.search.view</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale.view_order_product_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='industry_id']" position="after">
                    <field name="brand_id"/>
                </xpath>
                <xpath expr="//filter[@name='Sales']" position="after">
                    <filter name="brand_id" string="Brand" domain="[('brand_id', '!=', False)]"/>
                </xpath>
                <xpath expr="//filter[@name='group_by_date_day']" position="after">
                    <filter string="Brand" name="brand_id" context="{'group_by': 'brand_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>