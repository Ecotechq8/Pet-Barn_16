<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_supplier_add" model="ir.ui.view">
        <field name="name">product.template.product.form.supplier</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="product_supplier"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_tree_supplier_add" model="ir.ui.view">
        <field name="name">product.product.tree.supplier</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_stock_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="product_supplier" string="Product Supplier"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_search_supplier_add" model="ir.ui.view">
        <field name="name">product.product.search.supplier</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_search_form_view_stock_report"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <filter string="Supplier" name="product_supplier" domain="[]"
                        context="{'group_by': 'product_supplier'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_quant_form_supplier_add" model="ir.ui.view">
        <field name="name">stock.quant.form.supplier</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="product_supplier" string="Product Supplier"/>
            </xpath>
        </field>
    </record>

    <record id="stock_quant_search_supplier_add" model="ir.ui.view">
        <field name="name">stock.quant.search.supplier</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='company']" position="after">
                <filter string="Supplier" name="product_supplier" domain="[]"
                        context="{'group_by': 'product_supplier'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_move_tree_supplier_add" model="ir.ui.view">
        <field name="name">stock.move.tree.supplier</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_uom']" position="after">
                <field name="product_supplier" string="Product Supplier"/>
            </xpath>
        </field>
    </record>

    <record id="stock_move_search_supplier_add" model="ir.ui.view">
        <field name="name">stock.move.search.supplier</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='groupby_date']" position="after">
                <filter string="Supplier" name="product_supplier" domain="[]"
                        context="{'group_by': 'product_supplier'}"/>
            </xpath>
        </field>
    </record>

    <record id="stock_valuation_layer_tree_supplier_add" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.supplier</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value']" position="after">
                <field name="product_supplier" string="Product Supplier"/>
            </xpath>
        </field>
    </record>

    <record id="stock_valuation_layer_search_supplier_add" model="ir.ui.view">
        <field name="name">stock.valuation.layer.search.supplier</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.view_inventory_valuation_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_by_product_id']" position="after">
                <filter string="Supplier" name="product_supplier" domain="[]"
                        context="{'group_by': 'product_supplier'}"/>
            </xpath>
        </field>
    </record>
</odoo>
