<odoo>
    <data>
        <record id="sale_order_inherited_form_view_serial" model="ir.ui.view">
            <field name="name">sale.order.inherited.form.view.serial</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="lot_serial_number_ids" widget="many2many_tags"/>
                    <field name="related_location_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                    <field name="product_barcode" widget="barcode"
                           t-options="{'widget': 'barcode', 'symbology': 'auto', 'width': 400, 'height': 100, 'quiet': 0, 'img_style': 'height:35px;'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>