<odoo>
    <data>
        <record id="sale_order_inherited_form_view_serial" model="ir.ui.view">
            <field name="name">sale.order.inherited.form.view.serial</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="lot_serial_number_ids" widget="many2many_tags"/>
                    <field name="related_location_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>