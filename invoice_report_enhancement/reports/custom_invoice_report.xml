        <template id="custom_external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.sudo().key}}">
                <t t-out="0"/>
            </t>
            <t t-else="else" t-call="invoice_report_enhancement.custom_external_layout_standard">
                <t t-out="0"/>
            </t>
        </template>

        <template id="report_invoice_pet_barn_document">
            <t t-call="invoice_report_enhancement.custom_external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page" dir="ltr">
                    <h2 style="margin-top:45px;">
                        <center>
                            <strong>
                                <span>فــــــــاتورة بالحساب</span>
                                <br/>
                                <span>Invoice Credit On Account</span>
                            </strong>
                        </center>
                    </h2>

                    <div id="account_info" class="row mt-4 mb-4" dir="rtl">
                        <div class="col-auto col-3 mw-100 mb-2">
                            <t>
                                <strong>الـتـاريــخ:
                                    &#160;&#160;&#160;&#160;
                                    <span t-field="o.invoice_date"/>
                                </strong>
                            </t>
                            <br/>
                            <t>
                                <strong>الســـادة:</strong>
                                &#160;&#160;&#160;&#160;
                                <span t-field="o.partner_id.name"/>
                            </t>
                            <br/>
                            <t>
                                <strong>المـلاحـظــات:</strong>
                                &#160;&#160;&#160;&#160;
                                <span t-field="o.narration"/>
                            </t>
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2">
                            <strong>رقـم الفـاتـورة</strong>
                            <p class="m-0" t-field="o.name"/>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table" name="account_invoice_line" style="margin-top:30px;">
                        <thead>
                            <tr>
                                <th name="th_code" class="text-center">
                                    <span>رقـم الصـنـف
                                        <br/>
                                        Product Number
                                    </span>
                                </th>
                                <th name="th_name" class="text-center">
                                    <span>اســم الصـنـف
                                        <br/>
                                        Product Name
                                    </span>
                                </th>
                                <th name="th_expiry_date" class="text-center">
                                    <span>صـلاحـيــة المـنـتـج
                                        <br/>
                                        Expiry Date
                                    </span>
                                </th>
                                <th name="th_quantity" class="text-center">
                                    <span>الكـمـيـة
                                        <br/>
                                        Qty
                                    </span>
                                </th>
                                <th name="th_price_unit_wp" class="text-center">
                                    <span>سـعـر الجـمـلـة
                                        <br/>
                                        WSP
                                    </span>
                                </th>
                                <th name="th_price_unit_rp" class="text-center">
                                    <span>سـعـر التـجـزئـة
                                        <br/>
                                        RP
                                    </span>
                                </th>
                                <th name="th_subtotal" class="text-center">
                                    <span>الإجمالى
                                        <br/>
                                        Total
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="account_invoice_tbody text-center">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines"
                               t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>

                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="line.display_type == 'product'">
                                        <td class="text-center">
                                            <span t-field="line.product_id.default_code"
                                                  t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.product_id.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.expiration_date"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-center">
                                            <span class="text-nowrap" t-field="line.price_unit"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                        <td class="text-center">
                                            <t t-if="o.default_price_list">
                                                <t t-foreach="o.default_price_list.item_ids" t-as="item">
                                                    <t t-if="item.product_tmpl_id.name == line.product_id.name">
                                                        <span class="text-nowrap" t-field="item.price"/>
                                                    </t>
                                                </t>
                                            </t>
                                        </td>
                                        <td class="text-end o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td colspan="99">
                                            <strong class="mr16">Total</strong>
                                            <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix mb-4">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">

                                    <!--Tax totals-->
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                        <tr class="border-black o_subtotal">
                                            <td colspan="6">
                                                <strong t-esc="subtotal['name']"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-att-class="oe_subtotal_footer_separator"
                                                      t-esc="subtotal['formatted_amount']"/>
                                            </td>
                                        </tr>
                                        <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                        <t t-call="account.tax_groups_totals"/>
                                    </t>

                                    <!--Total amount with all taxes-->
                                    <tr class="border-black o_total">
                                        <td>
                                            <strong>المـجـمـوع
                                                <br/>
                                                Total
                                            </strong>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="tax_totals['formatted_amount_total']"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="font-size: 14px;text-align:center" dir="rtl">
                        <div class="col-3">
                            <strong>اسـم المـسـتـلـم <br/>Recipient Name</strong>
                            <br/>
                            <br/>
                            <span>--------------------------------------</span>
                            <br/>
                            <br/>
                            <strong>التـوقـيـع</strong>
                            <br/>
                            <br/>
                            <span>--------------------------------------</span>
                        </div>
                        <div class="col-4"/>
                        <div class="col-3">
                            <strong>تـوقـيـع البـائـع<br/>Signature of the seller</strong>
                            <br/>
                            <br/>
                            <span>--------------------------------------</span>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="report_invoice_pet_barn">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <span t-field="o.partner_id.lang"/>
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-call="invoice_report_enhancement.report_invoice_pet_barn_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <!-- QWeb Reports -->
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="name">Pet Barn Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">invoice_report_enhancement.report_invoice_pet_barn</field>
            <field name="report_file">invoice_report_enhancement.report_invoice_pet_barn</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id"
                   eval="[(4, ref('account.group_account_invoice')),(4, ref('account.group_account_readonly'))]"/>
        </record>

    </data>
</odoo>