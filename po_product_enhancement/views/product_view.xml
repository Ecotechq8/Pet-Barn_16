<odoo>
    <data>

        <record id="inherited_product_template_form_view" model="ir.ui.view">
            <field name="name">inherited.product.template.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="product_location"
                           options="{'no_quick_create': True, 'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_normal_inherited_form_view">
            <field name="name">product.product.form.extend</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='uom_id']" position="after">
                    <field name="product_location"
                           options="{'no_quick_create': True, 'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>