<odoo>

    <template id="custom_report_purchase_order_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_barcode">
                <strong>Barcode</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td name="product_barcode">
                <span t-if="line.product_id and line.product_id.barcode">
                    <div t-field="line.product_id.barcode"
                         t-options="{'widget': 'barcode', 'symbology': 'auto', 'width': 400, 'height': 100, 'quiet': 0, 'img_style': 'height:35px;'}"/>

                </span>
            </td>
        </xpath>
    </template>
    <template id="custom_report_purchase_quotation_document" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th name="th_barcode">
                <strong>Barcode</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td name="product_barcode">
                <span t-if="order_line.product_id and order_line.product_id.barcode">
                    <div t-field="order_line.product_id.barcode"
                         t-options="{'widget': 'barcode', 'symbology': 'auto', 'width': 400, 'height': 100, 'quiet': 0, 'img_style': 'height:35px;'}"/>

                </span>
            </td>
        </xpath>
    </template>
</odoo>