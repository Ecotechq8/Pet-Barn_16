<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="SetPricelistButton" t-inherit="point_of_sale.SetPricelistButton" t-inherit-mode="extension" owl="1">
	        <xpath expr="//div[hasclass('o_pricelist_button')]" position="replace">
	            <t t-if="env.pos.config.disable_pricelist_button">
                    <div class="control-button o_pricelist_button" style="background-color: #cccccc;color: #666666;pointer-events: none;">
                        <i class="fa fa-th-list" role="img" aria-label="Price list" title="Price list" />
                        <t t-esc="currentPricelistName" />
                    </div>
                </t>
                <t t-else="0">
                        <div class="control-button o_pricelist_button">
                        <i class="fa fa-th-list" role="img" aria-label="Price list" title="Price list" />
                        <t t-esc="currentPricelistName" />
                    </div>
                </t>
	        </xpath>
    </t>
</templates>
