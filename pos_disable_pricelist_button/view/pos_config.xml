<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record model="ir.ui.view" id="view_pos_config_form_extend">
        <field name="name">pos.config.form.extend</field>
        <field name="model">pos.config</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[4]/div[3]" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="disable_pricelist_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="disable_pricelist_button" string="Disable PriseList Button"/>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>