<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="assets_backend"
        name="assets"
        inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="/eco_pos_receipt/static/src/js/models.js"
            />
        </xpath>
    </template>

    <record id="view_product_product_inherit" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/div/h1[1]" position="after">
                    <h1>
                        <field name="name_ar" placeholder="Arabic Name"  invisible="1"/>
                    </h1>
                </xpath>


            </field>
        </record>
</odoo>
